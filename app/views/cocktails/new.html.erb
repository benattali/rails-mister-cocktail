<h1>Your Inspiration!</h1>

<%= simple_form_for(@cocktail) do |f| %>

  <% if @cocktail.errors.any? %>
    <% @cocktail.errors.full_messages.each do |message| %>
      <p><%= message %></p>
      <% end %>
  <% end %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, value: "Add", class: "btn btn-outline-danger" %>
  </div>
<% end %>

<%= link_to cocktails_path do %>
  <p> <i class="fas fa-arrow-circle-left"></i> </p>
<% end %>

