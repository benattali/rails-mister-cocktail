<h1>Your Inspiration!</h1>

<%= simple_form_for(@cocktail) do |f| %>

  <% if @cocktail.errors.any? %>
    <% @cocktail.errors.full_messages.each do |message| %>
      <p><%= message %></p>
      <% end %>
  <% end %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<%= link_to "Back", cocktails_path %>

