<h1><%= @cocktail.name %></h1>
<div class="card-cocktail">

    <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
    <div class="card-cocktail-description">
      <% @cocktail.doses.each do |dose| %>
        <h4>
          <%= dose.description %>
          <%= dose.ingredient.name %>
          <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="fas fa-times"></i>
          <% end %>
        </h4>
      <% end %>
    </div>
</div>
<%= link_to new_cocktail_dose_path(@cocktail) do %>
  <p data-toggle="tooltip" data-placement="top" title="Add"> <i class="fas fa-plus-circle"></i> </p>
<% end %>
<%= link_to cocktails_path do %>
  <p data-toggle="tooltip" data-placement="top" title="Back"> <i class="fas fa-arrow-circle-left"></i> </p>
<% end %>
<%= link_to cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" } do %>
  <p data-toggle="tooltip" data-placement="top" title="Delete"> <i class="fas fa-trash"></i> </p>
<% end %>
